# Django Settings
# IMPORTANT: Generate a unique secret key for production:
#   python -c "from django.core.management.utils import get_random_secret_key; print(get_random_secret_key())"
DJANGO_SECRET_KEY=your-secret-key-here
DEBUG=True
ALLOWED_HOSTS=localhost,127.0.0.1
DJANGO_ENVIRONMENT=development

# Database (PostgreSQL)
# Option 1: Individual vars (local development)
DB_NAME=hoang_lam_heritage
DB_USER=postgres
DB_PASSWORD=your-password
DB_HOST=localhost
DB_PORT=5432
# Option 2: Single URL (Heroku sets this automatically)
# DATABASE_URL=postgres://user:pass@host:5432/dbname

# Use SQLite for development (set to True to use SQLite instead of PostgreSQL)
USE_SQLITE=False

# CORS - In production, set to your actual domain(s)
CORS_ALLOWED_ORIGINS=http://localhost:3000,http://127.0.0.1:3000

# Firebase Cloud Messaging (Push Notifications)
FCM_ENABLED=False
FCM_CREDENTIALS_FILE=
FCM_CREDENTIALS_JSON=

# SMS Gateway (eSMS.vn)
# Register at https://esms.vn to get API credentials
# Leave SMS_ENABLED=False to use mock mode (development)
SMS_ENABLED=False
SMS_API_KEY=
SMS_SECRET_KEY=
SMS_BRAND_NAME=

# Email (Production)
# EMAIL_HOST=smtp.gmail.com
# EMAIL_PORT=587
# EMAIL_USE_TLS=True
# EMAIL_HOST_USER=
# EMAIL_HOST_PASSWORD=
# DEFAULT_FROM_EMAIL=noreply@hoanglam.com

# Redis (Optional - for caching)
# REDIS_URL=redis://localhost:6379/0

# Database Connection Pooling
DB_CONN_MAX_AGE=600

# Celery (Task Queue & Scheduling)
CELERY_BROKER_URL=redis://localhost:6379/0
CELERY_RESULT_BACKEND=redis://localhost:6379/0

# Field-Level Encryption (Sensitive Guest Data)
# Generate a key: python -c "from cryptography.fernet import Fernet; print(Fernet.generate_key().decode())"
# Leave empty to disable encryption (development)
FIELD_ENCRYPTION_KEY=

# Hash Pepper (Sensitive Field Lookups)
# Prevents precomputation attacks on CCCD numbers.
# Generate: python -c "import secrets; print(secrets.token_urlsafe(32))"
# IMPORTANT: Changing this invalidates all existing hash columns.
HASH_PEPPER=

# Media Storage (default: local filesystem served by nginx)
# Set to "s3" for S3-compatible storage (AWS S3, MinIO, DigitalOcean Spaces)
MEDIA_STORAGE_BACKEND=local

# S3 Settings (only needed if MEDIA_STORAGE_BACKEND=s3)
# AWS_ACCESS_KEY_ID=
# AWS_SECRET_ACCESS_KEY=
# AWS_STORAGE_BUCKET_NAME=
# AWS_S3_REGION_NAME=ap-southeast-1
# AWS_S3_ENDPOINT_URL=
# AWS_S3_CUSTOM_DOMAIN=

# Sentry Error Tracking
# Get your DSN from https://sentry.io → Project Settings → Client Keys
# Leave empty to disable (development)
SENTRY_DSN=
SENTRY_ENVIRONMENT=development
SENTRY_TRACES_SAMPLE_RATE=0
