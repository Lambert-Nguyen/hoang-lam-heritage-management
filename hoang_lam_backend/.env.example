# Django Settings
# IMPORTANT: Generate a unique secret key for production:
#   python -c "from django.core.management.utils import get_random_secret_key; print(get_random_secret_key())"
DJANGO_SECRET_KEY=your-secret-key-here
DEBUG=True
ALLOWED_HOSTS=localhost,127.0.0.1
DJANGO_ENVIRONMENT=development

# Database (PostgreSQL)
DB_NAME=hoang_lam_heritage
DB_USER=postgres
DB_PASSWORD=your-password
DB_HOST=localhost
DB_PORT=5432

# Use SQLite for development (set to True to use SQLite instead of PostgreSQL)
USE_SQLITE=False

# CORS - In production, set to your actual domain(s)
CORS_ALLOWED_ORIGINS=http://localhost:3000,http://127.0.0.1:3000

# Firebase Cloud Messaging (Push Notifications)
FCM_ENABLED=False
FCM_CREDENTIALS_FILE=
FCM_CREDENTIALS_JSON=

# Email (Production)
# EMAIL_HOST=smtp.gmail.com
# EMAIL_PORT=587
# EMAIL_USE_TLS=True
# EMAIL_HOST_USER=
# EMAIL_HOST_PASSWORD=
# DEFAULT_FROM_EMAIL=noreply@hoanglam.com

# Redis (Optional - for caching)
# REDIS_URL=redis://localhost:6379/0

# Database Connection Pooling
DB_CONN_MAX_AGE=600

# Celery (Task Queue & Scheduling)
CELERY_BROKER_URL=redis://localhost:6379/0
CELERY_RESULT_BACKEND=redis://localhost:6379/0

# Field-Level Encryption (Sensitive Guest Data)
# Generate a key: python -c "from cryptography.fernet import Fernet; print(Fernet.generate_key().decode())"
# Leave empty to disable encryption (development)
FIELD_ENCRYPTION_KEY=

# Sentry Error Tracking
# Get your DSN from https://sentry.io → Project Settings → Client Keys
# Leave empty to disable (development)
SENTRY_DSN=
SENTRY_ENVIRONMENT=development
SENTRY_TRACES_SAMPLE_RATE=0
