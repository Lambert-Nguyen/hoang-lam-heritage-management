# Flake8 Configuration
# Code style and linting rules for Python

[flake8]
max-line-length = 100
exclude =
    .git,
    __pycache__,
    .venv,
    venv,
    migrations,
    */migrations/*,
    build,
    dist,
    *.egg-info,
    .pytest_cache,
    .tox

# Error codes to ignore
ignore =
    # E203: whitespace before ':' (conflicts with black)
    E203,
    # W503: line break before binary operator (conflicts with black)
    W503,
    # E501: line too long (handled by black)
    E501,
    # F401: module imported but unused (handled by isort)
    # F403: 'from module import *' used; unable to detect undefined names

# Select specific error codes to check
select = 
    # Pyflakes errors
    F,
    # pycodestyle errors
    E,
    # pycodestyle warnings
    W,
    # McCabe complexity
    C90,
    # Naming conventions
    N,

# Maximum complexity
max-complexity = 35

# Import order style
import-order-style = google

# Documentation style
docstring-convention = google

per-file-ignores =
    # Ignore unused imports in __init__.py files
    __init__.py:F401,F403
    # Django split settings use 'from .base import *'
    */settings/*.py:E501,F401,F403,F405,E402
    # Ignore all checks in migrations
    */migrations/*.py:ALL
